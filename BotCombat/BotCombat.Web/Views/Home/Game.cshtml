@model BotCombat.Web.Data.Domain.Game
@{
    ViewData["Title"] = "Game #" + Model.Id;
}
<h1>@ViewData["Title"]</h1>


<canvas id="canvas" style="width: 100%"></canvas>
<div class="form-row">

    <div class="form-group col-sm-1">
        <a id="playStop" class="btn btn-light"></a>
    </div>
    <div class="form-group col-sm-10">
        <input type="range" id="rangeControl" style="width: 100%" class="form-control" />
    </div>
    <div class="form-group col-sm-1">
        <div class="float-right">
            <select id="speedSelect" class="form-control">
                <option value="8">x1</option>
                <option value="4">x2</option>
                <option value="2">x4</option>
                <option value="1">x8</option>
            </select>
        </div>
    </div>
</div>
<hr />
<div class="log-container">
    <div id="log"></div>
</div>


<script>
    document.addEventListener('DOMContentLoaded',
        function() {
            const game = new Game($.parseJSON('@Html.Raw(Model.Json)'), '#canvas', '#log', '#rangeControl', '#speedSelect', '#playStop');
            game.play();
        });
</script>